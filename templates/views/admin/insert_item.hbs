  <body class="nav-md">

    <input id="tab" value="{{tab}}" hidden></input>
    <input id="selection" value="{{selection}}" hidden></input>

    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            {{>admin_top_menu}} 
